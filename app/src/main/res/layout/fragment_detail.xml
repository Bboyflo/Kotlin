<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".presentation.detail.fragment.DetailFragment">


    <ImageView android:id="@+id/id_image_detail"
               android:layout_height="200dp"
               android:layout_width="match_parent"
               tools:layout_editor_absoluteX="10dp"
               app:layout_constraintTop_toTopOf="parent"
               android:scaleType="centerCrop"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/id_name_detail"
            app:layout_constraintTop_toBottomOf="@+id/id_image_detail"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/id_gender_detail"
            app:layout_constraintTop_toBottomOf="@+id/id_name_detail"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/id_species_detail"
            app:layout_constraintTop_toBottomOf="@+id/id_gender_detail"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/id_origin_detail"
            app:layout_constraintTop_toBottomOf="@+id/id_species_detail"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/id_location_detail"
            app:layout_constraintTop_toBottomOf="@+id/id_origin_detail"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</androidx.constraintlayout.widget.ConstraintLayout>